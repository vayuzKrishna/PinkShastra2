<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#E0E0E0"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="370dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/about_rl"
                android:background="@drawable/bg_card"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CASE ID  "
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="CA12345678"
                    android:id="@+id/caseid"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="3dp"
                    android:layout_alignParentTop="true"

                    android:layout_toRightOf="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Monday, 14 Dec 2015,   2:15pm"
                    android:id="@+id/date"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/caseid"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/about"
                    android:layout_below="@+id/date"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Not Consulting Anyone"
                    android:id="@+id/dis"
                    android:layout_marginTop="10dp"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_alignRight="@+id/date"
                    android:layout_alignEnd="@+id/date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:textColor="@color/white"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@color/Amber"
                    android:layout_alignBottom="@+id/caseid"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/about_rl"
                android:background="@drawable/bg_card"
                android:id="@+id/relativeLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PROBLEM TYPE"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/Problem"
                    />

                <Button
                    android:layout_width="280dp"
                    android:layout_height="30dp"
                    android:text="Hair Fall(Hair)"
                    android:layout_marginTop="5dp"
                    android:background="@color/Grey"
                    android:textColor="@color/white"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/hairfall"
                    android:textAlignment="viewStart"
                    android:layout_below="@+id/Problem"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hairlayout"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/hairfall">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ethair"
                        android:layout_marginTop="10dp"
                        android:text="I am facing hairfall and dandruff problem from last few months."/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/ethair"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/prescription" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/prescription"
                            android:layout_marginLeft="10dp" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/prescription"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="3 attachments"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@color/Grey"
                    android:focusable="false"
                    android:layout_alignTop="@+id/hairfall"
                    android:layout_toEndOf="@+id/hairfall"
                    android:id="@+id/imageView13" />

                <Button
                    android:layout_width="280dp"
                    android:layout_height="30dp"
                    android:text="Bone Pain(Bone)"
                    android:textAlignment="viewStart"
                    android:background="@color/Grey"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/hairlayout"
                    android:id="@+id/bonepain"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bonlayout"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/bonepain">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etbone"
                        android:text="Sometime I have severe pain in my right knee"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/etbone"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/prescription" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/prescription"
                            android:layout_marginLeft="10dp" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/prescription"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="3 attachments"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@color/Grey"
                    android:focusable="false"
                    android:id="@+id/imageView14"
                    android:layout_alignTop="@+id/bonepain"
                    android:layout_toEndOf="@+id/hairfall" />






                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView20"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/plus"
                    android:layout_alignTop="@+id/imageView14"
                    android:layout_toEndOf="@+id/bonepain" />


            </RelativeLayout>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView19"
                android:layout_marginLeft="310dp"
                android:background="@drawable/plus"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_marginTop="49dp" />

        </RelativeLayout>
    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="PRESCRIBE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>